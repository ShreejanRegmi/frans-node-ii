<h2>Furniture</h2>
<a class="new" href="/admin/savefurniture">Add new furniture</a>
<table id="furniture-table">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width: 10%">Price</th>
            <th style="width: 10%">Category</th>
            <th style="width: 5%">&nbsp;</th>
            <th style="width: 5%">&nbsp;</th>
        </tr>
        <% furnitures.forEach(f => { %>
        <tr>
            <td><%= f.name %> </td>
            <td><%= f.price %> </td>
            <td><%= f.category.name %> </td>
            <td><a style="float: right" href="/admin/savefurniture?fid=<%= f.id %> ">Edit</a></td>
            <td>
                <form action="/furniture/<%= f.id %> " method="post">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </thead>
</table>
<% if (furnitures.length == 0) { %>
    <p style="text-align: center; margin-top: 20px;">No furnitures found</p>
<% } %>